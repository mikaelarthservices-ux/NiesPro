{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Gateway": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5010"
      }
    }
  },
  "JwtSettings": {
    "Key": "NiesPro_Gateway_Secret_Key_2024_Professional_Architecture_Super_Secure",
    "Issuer": "NiesPro.Gateway",
    "Audience": "NiesPro.APIs",
    "ExpirationInMinutes": 60
  },
  "Microservices": {
    "AuthAPI": {
      "BaseUrl": "https://localhost:5011",
      "HealthEndpoint": "/health"
    },
    "CatalogAPI": {
      "BaseUrl": "https://localhost:5013",
      "HealthEndpoint": "/health"
    },
    "OrderAPI": {
      "BaseUrl": "https://localhost:5012", 
      "HealthEndpoint": "/health"
    },
    "PaymentAPI": {
      "BaseUrl": "https://localhost:5014",
      "HealthEndpoint": "/health"
    },
    "StockAPI": {
      "BaseUrl": "https://localhost:5015",
      "HealthEndpoint": "/health"
    },
    "CustomerAPI": {
      "BaseUrl": "https://localhost:5016",
      "HealthEndpoint": "/health"
    },
    "RestaurantAPI": {
      "BaseUrl": "https://localhost:5017",
      "HealthEndpoint": "/health"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}