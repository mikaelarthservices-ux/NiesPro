{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-api-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NiesProPaymentDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Issuer": "https://niespro.com",
    "Audience": "https://api.niespro.com",
    "SecretKey": "super-secret-key-for-jwt-token-generation-minimum-256-bits-required-for-security"
  },
  "Payment": {
    "Stripe": {
      "PublishableKey": "pk_test_...",
      "SecretKey": "sk_test_...",
      "WebhookSecret": "whsec_...",
      "BaseUrl": "https://api.stripe.com"
    },
    "PayPal": {
      "ClientId": "your-paypal-client-id",
      "ClientSecret": "your-paypal-client-secret",
      "BaseUrl": "https://api.sandbox.paypal.com",
      "WebhookId": "your-webhook-id"
    },
    "Plaid": {
      "ClientId": "your-plaid-client-id",
      "Secret": "your-plaid-secret",
      "Environment": "sandbox"
    },
    "Coinbase": {
      "ApiKey": "your-coinbase-api-key",
      "ApiSecret": "your-coinbase-api-secret",
      "BaseUrl": "https://api.coinbase.com"
    },
    "FraudDetection": {
      "EnableRealTimeScoring": true,
      "DefaultRiskThreshold": 70.0,
      "MaxProcessingTimeMs": 5000,
      "EnableMachineLearning": true
    },
    "Encryption": {
      "Key": "32-character-encryption-key-here-!",
      "Algorithm": "AES-256-GCM"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://localhost:5001",
      "https://niespro.com",
      "https://admin.niespro.com"
    ]
  },
  "RateLimiting": {
    "PaymentPolicy": {
      "PermitLimit": 100,
      "WindowInMinutes": 1
    },
    "WebhookPolicy": {
      "PermitLimit": 1000,
      "WindowInMinutes": 1
    }
  },
  "HealthChecks": {
    "HealthCheckUrl": "/health",
    "DetailedErrors": false,
    "Timeout": "00:00:30"
  },
  "AllowedHosts": "*"
}
