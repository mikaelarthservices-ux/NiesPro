{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=NiesPro_Order;Uid=root;Pwd=;"
  },
  "JwtSettings": {
    "Issuer": "https://localhost:7001",
    "Audience": "https://localhost:7001",
    "SecretKey": "YourSuperSecretKeyForJWTTokenGeneration123456789",
    "ExpirationInMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/order-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckEndpoint": "/health",
      "HealthCheckUIEndpoint": "/health-ui"
    }
  },
  "Cors": {
    "OrderApiPolicy": {
      "Origins": [
        "https://localhost:3000",
        "https://localhost:3001",
        "http://localhost:3000",
        "http://localhost:3001"
      ],
      "Methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "Headers": [ "Content-Type", "Authorization", "X-Requested-With" ],
      "AllowCredentials": true
    }
  },
  "Swagger": {
    "Title": "Order API",
    "Version": "v1",
    "Description": "API de gestion des commandes avec Event Sourcing et CQRS"
  },
  "EventStore": {
    "ConnectionString": "Server=localhost;Port=3306;Database=NiesPro_OrderEventStore;Uid=root;Pwd=;",
    "StreamPrefix": "order-",
    "SnapshotFrequency": 10
  },
  "AllowedHosts": "*"
}