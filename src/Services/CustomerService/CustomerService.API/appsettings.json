{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "CustomerService": "Debug"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "CustomerService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/customerservice-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=NiesProDB;Uid=root;Pwd=password123;charset=utf8mb4;",
    "ReadOnlyConnection": "Server=localhost;Database=NiesProDB;Uid=readonly_user;Pwd=readonly_pass;charset=utf8mb4;"
  },
  "JWT": {
    "Key": "NiesProSuperSecretKeyForJWTAuthentication2024!",
    "Issuer": "NiesPro.AuthService",
    "Audience": "NiesPro.Services",
    "ExpireMinutes": 60
  },
  "Microservices": {
    "AuthService": {
      "BaseUrl": "http://localhost:5001"
    },
    "LogsService": {
      "BaseUrl": "http://localhost:5003"
    },
    "FilesService": {
      "BaseUrl": "http://localhost:5004"
    }
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "https://localhost:7000",
    "https://localhost:7001"
  ],
  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 50
  },
  "Cache": {
    "Redis": {
      "ConnectionString": "localhost:6379",
      "InstanceName": "NiesPro.CustomerService"
    },
    "DefaultExpirationMinutes": 30
  },
  "Email": {
    "Provider": "SMTP",
    "SMTP": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "EnableSsl": true,
      "Username": "noreply@niespro.com",
      "Password": "app_password_here"
    }
  },
  "SMS": {
    "Provider": "Twilio",
    "Twilio": {
      "AccountSid": "your_twilio_account_sid",
      "AuthToken": "your_twilio_auth_token",
      "FromNumber": "+1234567890"
    }
  },
  "CustomerService": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "EnableAnalytics": true,
    "EnableRecommendations": true,
    "LoyaltyProgram": {
      "DefaultPointsPerEuro": 10,
      "DefaultTiers": {
        "Bronze": 0,
        "Silver": 1000,
        "Gold": 5000,
        "Platinum": 10000
      }
    },
    "Segmentation": {
      "AutoRefreshIntervalHours": 24,
      "MaxSegmentsPerCustomer": 5
    }
  }
}