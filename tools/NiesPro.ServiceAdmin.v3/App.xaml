<Application x:Class="NiesPro.ServiceAdmin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- Modern Professional NiesPro theme resources -->
        <SolidColorBrush x:Key="NiesProPrimaryBrush" Color="#0A0E1A"/>
        <SolidColorBrush x:Key="NiesProSecondaryBrush" Color="#1A1F2E"/>
        <SolidColorBrush x:Key="NiesProAccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="NiesProCyanBrush" Color="#00D4FF"/>
        
        <!-- Global converters for status and health -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application>
