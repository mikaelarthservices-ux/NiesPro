<Window x:Class="NiesPro.ServiceAdmin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:NiesPro.ServiceAdmin.Converters"
        xmlns:controls="clr-namespace:NiesPro.ServiceAdmin.v3.Controls"
        Title="NiesPro Service Administration Platform v3.0" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:HealthToColorConverter x:Key="HealthToColorConverter"/>
        <converters:RunningToGradientConverter x:Key="RunningToGradientConverter"/>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        
        <!-- Professional NiesPro styling -->
        <Style x:Key="NiesProButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E3192"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3FA0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>

                <!-- Modern Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#607D8B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#546E7A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#455A64"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Service Card Style -->
        <Style x:Key="ServiceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      Opacity="0.1" 
                                      BlurRadius="10" 
                                      ShadowDepth="2" 
                                      Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#000000" 
                                              Opacity="0.15" 
                                              BlurRadius="15" 
                                              ShadowDepth="4" 
                                              Direction="270"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3192" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="NiesPro Service Administration Platform" 
                               FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Professional Enterprise Microservices Management v3.0" 
                               FontSize="14" Foreground="#E0E0E0" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Uptime: " Foreground="#E0E0E0" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding UptimeText}" Foreground="White" FontFamily="Consolas"/>
                    
                    <TextBlock Text="Services: " Foreground="#E0E0E0" FontWeight="SemiBold" Margin="20,0,5,0"/>
                    <TextBlock Text="{Binding RunningServicesCount}" Foreground="#4CAF50" FontWeight="Bold"/>
                    <TextBlock Text="/" Foreground="#E0E0E0"/>
                    <TextBlock Text="{Binding TotalServicesCount}" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="🔄 Refresh All" 
                            Style="{StaticResource NiesProButtonStyle}"
                            Command="{Binding RefreshCommand}"/>
                    
                    <Button Content="▶️ Start All" 
                            Style="{StaticResource NiesProButtonStyle}"
                            Command="{Binding StartAllCommand}"/>
                    
                    <Button Content="⏹️ Stop All" 
                            Style="{StaticResource NiesProButtonStyle}"
                            Command="{Binding StopAllCommand}"/>
                    
                    <Button Content="🔄 Restart All" 
                            Style="{StaticResource NiesProButtonStyle}"
                            Command="{Binding RestartAllCommand}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar Width="20" Height="20" IsIndeterminate="True" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontStyle="Italic" 
                               Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Services Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl ItemsSource="{Binding Services}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ServiceCardStyle}" Margin="0,0,0,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Service Header with enhanced design -->
                                <Border Grid.Row="0" 
                                        Background="{Binding IsRunning, Converter={StaticResource RunningToGradientConverter}}"
                                        Padding="20,15"
                                        CornerRadius="8,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Indicator -->
                                        <Border Grid.Column="0" 
                                                Width="12" Height="12" 
                                                CornerRadius="6"
                                                VerticalAlignment="Center"
                                                Margin="0,0,15,0">
                                            <Border.Background>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <MultiBinding Converter="{StaticResource StatusToColorConverter}">
                                                            <Binding Path="IsRunning"/>
                                                            <Binding Path="IsHealthy"/>
                                                        </MultiBinding>
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- Service Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       FontSize="22" FontWeight="Bold" 
                                                       Foreground="White"/>
                                            <TextBlock Text="{Binding ServiceName}" 
                                                       FontSize="14" Foreground="#E0E0E0"
                                                       FontFamily="Consolas" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" Foreground="#CCCCCC"
                                                       Margin="0,4,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="2" 
                                                Background="{Binding StatusText, Converter={StaticResource StatusToBrushConverter}}"
                                                CornerRadius="12"
                                                Padding="12,6"
                                                VerticalAlignment="Center"
                                                Margin="15,0">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Foreground="White"/>
                                        </Border>

                                        <!-- Quick Actions -->
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="▶️" ToolTip="Start Service"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding StartCommand}"
                                                    Width="36" Height="36" Margin="5,0"/>
                                            
                                            <Button Content="⏹️" ToolTip="Stop Service"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding StopCommand}"
                                                    Width="36" Height="36" Margin="5,0"/>
                                            
                                            <Button Content="🔄" ToolTip="Restart Service"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding RestartCommand}"
                                                    Width="36" Height="36" Margin="5,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Service Details Panel -->
                                <Border Grid.Row="1" Background="White" Padding="20,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Connection Info -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="ENDPOINT" FontSize="10" FontWeight="Bold" Foreground="#888888"/>
                                            <TextBlock Text="{Binding Port, StringFormat={}Port {0}}" 
                                                       FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#333333" Margin="0,2"/>
                                            <TextBlock Text="{Binding BaseUrl}" 
                                                       FontSize="11" Foreground="#666666"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Health Status -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="HEALTH" FontSize="10" FontWeight="Bold" Foreground="#888888"/>
                                            <TextBlock Text="{Binding HealthText}" 
                                                       FontSize="16" FontWeight="SemiBold" 
                                                       Margin="0,2">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush Color="{Binding Health, Converter={StaticResource HealthToColorConverter}}"/>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Metrics.ResponseTimeMs, StringFormat={}{0:F1}ms response}" 
                                                       FontSize="11" Foreground="#666666"/>
                                        </StackPanel>
                                        
                                        <!-- Performance Metrics -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="PERFORMANCE" FontSize="10" FontWeight="Bold" Foreground="#888888"/>
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="#333333" Margin="0,2">
                                                <Run Text="{Binding Metrics.CpuUsage, StringFormat={}{0:F1}%}"/>
                                                <Run Text="CPU" FontSize="12" Foreground="#888888"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Metrics.MemoryUsageMB, StringFormat={}{0} MB RAM}" 
                                                       FontSize="11" Foreground="#666666"/>
                                        </StackPanel>
                                        
                                        <!-- Uptime -->
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="UPTIME" FontSize="10" FontWeight="Bold" Foreground="#888888"/>
                                            <TextBlock Text="{Binding UptimeText}" 
                                                       FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#333333" Margin="0,2"
                                                       FontFamily="Consolas"/>
                                            <TextBlock Text="{Binding Metrics.RequestsPerSecond, StringFormat={}{0} req/s}" 
                                                       FontSize="11" Foreground="#666666"/>
                                        </StackPanel>
                                        
                                        <!-- Extended Actions -->
                                        <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                            <Button Content="❤️" ToolTip="Check Health"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding CheckHealthCommand}"
                                                    Width="36" Height="36" Margin="5,0"
                                                    Background="#FF4081"/>
                                            
                                            <Button Content="📊" ToolTip="Open Swagger"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding OpenSwaggerCommand}"
                                                    Width="36" Height="36" Margin="5,0"
                                                    Background="#4CAF50"/>
                                            
                                            <ToggleButton Name="LogConsoleToggle"
                                                          ToolTip="Toggle Console Logs"
                                                          Style="{StaticResource ModernToggleButtonStyle}"
                                                          Width="36" Height="36" Margin="10,0,0,0">
                                                <TextBlock Text="📄" FontSize="16"/>
                                            </ToggleButton>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Log Console (Collapsible) -->
                                <Border Grid.Row="2" 
                                        Background="#F8F9FA"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="1,0,1,1"
                                        Height="250"
                                        Visibility="{Binding IsChecked, ElementName=LogConsoleToggle, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentPresenter Content="{Binding LogConsole}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#2E3192" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="© 2024 NiesPro Corporation - Professional Enterprise Service Administration Platform"
                           Foreground="#E0E0E0" FontSize="12"/>
                
                <TextBlock Grid.Column="1" 
                           Text="Version 3.0.0"
                           Foreground="White" FontWeight="SemiBold" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>