<Window x:Class="NiesPro.ServiceManager.SimpleServiceManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NiesPro Service Manager - Simple" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ðŸš€ NiesPro Service Manager" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Name="StartAllBtn" Content="â–¶ï¸ Start All" Margin="20,0,5,0" Padding="10,5" Click="StartAll_Click"/>
            <Button Name="StopAllBtn" Content="â¹ï¸ Stop All" Margin="5,0" Padding="10,5" Click="StopAll_Click"/>
            <Button Name="CleanupBtn" Content="ðŸ§¹ Cleanup" Margin="5,0" Padding="10,5" Click="Cleanup_Click"/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="1" Background="LightGray" Padding="10" Margin="0,0,0,10">
            <TextBlock Name="StatusText" Text="Status: Loading..." FontWeight="Bold"/>
        </Border>

        <!-- Services List -->
        <ListBox Grid.Row="2" Name="ServicesListBox" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="WhiteSmoke" Padding="10" Margin="5" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Path}" FontSize="10" Foreground="Gray"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding StatusText}" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProcessId, StringFormat='PID: {0}'}" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="ðŸ¥ Health" Margin="5,0" Padding="5" 
                                      Click="OpenHealth_Click" Tag="{Binding}"/>
                                <Button Content="ðŸ“– Swagger" Margin="5,0" Padding="5" 
                                      Click="OpenSwagger_Click" Tag="{Binding}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                <Button Content="â–¶ï¸ Start" Margin="2" Padding="8,4" 
                                      Click="StartService_Click" Tag="{Binding}"/>
                                <Button Content="â¹ï¸ Stop" Margin="2" Padding="8,4" 
                                      Click="StopService_Click" Tag="{Binding}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Logs Panel -->
        <Border Grid.Row="3" Background="Black" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="ðŸ“‹ Logs:" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox Name="LogServiceCombo" Margin="10,0" MinWidth="150" 
                            DisplayMemberPath="DisplayName" 
                            SelectionChanged="LogServiceCombo_SelectionChanged"/>
                    <Button Content="ðŸ—‘ï¸ Clear" Margin="10,0" Padding="5" Click="ClearLogs_Click"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                    <TextBox Name="LogTextBox" 
                           Background="Black" 
                           Foreground="Lime" 
                           FontFamily="Consolas" 
                           FontSize="11"
                           IsReadOnly="True"
                           TextWrapping="Wrap"
                           BorderThickness="0"
                           Text="Select a service to view logs..."/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>