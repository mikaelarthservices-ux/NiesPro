<UserControl x:Class="NiesPro.AdminPanel.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <UserControl.Resources>
        <!-- Convertisseur pour IsHealthy vers Brush -->
        <Style x:Key="HealthStatusStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHealthy}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsHealthy}" Value="False">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Convertisseur pour IsHealthy vers Texte -->
        <Style x:Key="HealthTextStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHealthy}" Value="True">
                    <Setter Property="Text" Value="En ligne"/>
                    <Setter Property="Foreground" Value="DarkGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsHealthy}" Value="False">
                    <Setter Property="Text" Value="Hors ligne"/>
                    <Setter Property="Foreground" Value="DarkRed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- En-tête -->
            <TextBlock Text="Dashboard" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Margin="0,0,0,24"/>

            <!-- Métriques principales -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Services sains -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,12,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                   Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                   Width="24" Height="24"/>
                            <TextBlock Text="Services Sains" Margin="8,0" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding HealthyServices}" 
                                 Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                 Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                        <TextBlock Text="{Binding TotalServices, StringFormat='sur {0} services'}" 
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Services défaillants -->
                <materialDesign:Card Grid.Column="1" Margin="6,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                   Foreground="{DynamicResource ValidationErrorBrush}"
                                                   Width="24" Height="24"/>
                            <TextBlock Text="Services Défaillants" Margin="8,0" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding UnhealthyServices}" 
                                 Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                 Foreground="{DynamicResource ValidationErrorBrush}"/>
                        <TextBlock Text="problèmes détectés" 
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- CPU Usage -->
                <materialDesign:Card Grid.Column="2" Margin="6,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Cpu64Bit" 
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                   Width="24" Height="24"/>
                            <TextBlock Text="CPU" Margin="8,0" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SystemCpuUsage, StringFormat='{}{0:F1}%'}" 
                                 Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="utilisation système" 
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Memory Usage -->
                <materialDesign:Card Grid.Column="3" Margin="12,0,0,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Memory" 
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                   Width="24" Height="24"/>
                            <TextBlock Text="Mémoire" Margin="8,0" 
                                     Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SystemMemoryUsage, StringFormat='{}{0:F1}%'}" 
                                 Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="utilisation système" 
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Graphiques -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Temps de réponse -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,12,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Temps de Réponse (ms)" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                                 Margin="0,0,0,16"/>
                        <lvc:CartesianChart Series="{Binding ResponseTimeChart}" 
                                          Height="300" LegendLocation="Right">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Temps" />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Millisecondes" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Nombre de requêtes -->
                <materialDesign:Card Grid.Column="1" Margin="12,0,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Requêtes par Minute" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                                 Margin="0,0,0,16"/>
                        <lvc:CartesianChart Series="{Binding RequestCountChart}" 
                                          Height="300">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Temps" />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Requêtes" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Statut détaillé des services -->
            <materialDesign:Card Padding="16">
                <StackPanel>
                    <DockPanel Margin="0,0,0,16">
                        <TextBlock Text="État des Services" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Command="{Binding StartAllServicesCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,8,0"
                                    ToolTip="Démarrer tous les services">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Play" Margin="0,0,4,0"/>
                                    <TextBlock Text="Démarrer"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding RefreshServicesCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="Actualiser">
                                <materialDesign:PackIcon Kind="Refresh"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid ItemsSource="{Binding ServiceStatuses}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service" 
                                              Binding="{Binding Name}" 
                                              Width="120"/>
                            <DataGridTemplateColumn Header="Statut" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusBackground}"
                                                CornerRadius="4" 
                                                Padding="8,4"
                                                BorderThickness="1"
                                                BorderBrush="{Binding StatusColor}">
                                            <TextBlock Text="{Binding StatusText}"
                                                     Foreground="{Binding StatusColor}"
                                                     FontWeight="Bold" 
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Port" 
                                              Binding="{Binding Port}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Dernière Vérification" 
                                              Binding="{Binding LastCheck, StringFormat='HH:mm:ss'}" 
                                              Width="140"/>
                                              Width="100"/>
                            <DataGridTextColumn Header="Erreurs" 
                                              Binding="{Binding ErrorCount}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="CPU%" 
                                              Binding="{Binding CpuUsage, StringFormat='{}{0:F1}%'}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Mémoire%" 
                                              Binding="{Binding MemoryUsage, StringFormat='{}{0:F1}%'}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Dernière MAJ" 
                                              Binding="{Binding LastUpdate, StringFormat='{}{0:HH:mm:ss}'}" 
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>