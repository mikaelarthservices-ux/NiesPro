<!-- Fichiers XAML séparés pour les vues métier -->

<!-- UsersView.xaml -->
<UserControl x:Class="NiesPro.AdminPanel.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <materialDesign:Card Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountGroup" Width="64" Height="64" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Gestion des Utilisateurs" 
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         HorizontalAlignment="Center" Margin="0,16,0,8"/>
                <TextBlock Text="Cette fonctionnalité sera implémentée prochainement" 
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         HorizontalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="• CRUD utilisateurs avec rôles RBAC" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,16,0,2"/>
                <TextBlock Text="• Gestion des sessions et appareils connectés" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,2"/>
                <TextBlock Text="• Audit trail complet des actions" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,2"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>