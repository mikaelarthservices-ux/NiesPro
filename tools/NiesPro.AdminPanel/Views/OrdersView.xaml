<UserControl x:Class="NiesPro.AdminPanel.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <materialDesign:Card Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="ShoppingCart" Width="64" Height="64" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Supervision des Commandes" 
                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                         HorizontalAlignment="Center" Margin="0,16,0,8"/>
                <TextBlock Text="Cette fonctionnalité sera implémentée prochainement" 
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         HorizontalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="• Pipeline visuel des statuts commandes" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,16,0,2"/>
                <TextBlock Text="• Event Sourcing view avec historique" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,2"/>
                <TextBlock Text="• Workflow management avec CQRS" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}" Margin="0,2"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>