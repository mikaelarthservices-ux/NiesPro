<Application x:Class="NiesPro.AdminPanel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             ShutdownMode="OnExplicitShutdown">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Styles -->
            <Style x:Key="ModernCard" TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="16"/>
                <Setter Property="Padding" Value="24"/>
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
            </Style>
            
            <Style x:Key="StatCardNumber" TargetType="TextBlock">
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            </Style>
            
            <Style x:Key="StatCardLabel" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>
            
            <Style x:Key="ServiceStatusIndicator" TargetType="Ellipse">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Margin" Value="0,0,8,0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>