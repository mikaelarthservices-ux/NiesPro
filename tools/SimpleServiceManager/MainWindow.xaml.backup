<Window x:Class="NiesPro.ServiceAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Height="950" Width="1600"
        WindowStartupLocation="CenterScreen"
        MinWidth="1400" MinHeight="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- NiesPro Professional Color Palette -->
        <SolidColorBrush x:Key="NiesProPrimary" Color="#0B1426"/>
        <SolidColorBrush x:Key="NiesProSecondary" Color="#1B2951"/>
        <SolidColorBrush x:Key="NiesProAccent" Color="#2E4BC6"/>
        <SolidColorBrush x:Key="NiesProGold" Color="#D4AF37"/>
        <SolidColorBrush x:Key="NiesProLight" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="NiesProSurface" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NiesProBorder" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="NiesProSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="NiesProWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="NiesProError" Color="#EF4444"/>
        <SolidColorBrush x:Key="NiesProInfo" Color="#3B82F6"/>
        <SolidColorBrush x:Key="NiesProTextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="NiesProTextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="NiesProTextMuted" Color="#94A3B8"/>
        
        <!-- NiesPro Ultra-Modern Button Styles -->
        <Style x:Key="NiesProPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NiesProAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" 
                                                ShadowDepth="2" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3B5CE6" Offset="0"/>
                                            <GradientStop Color="#2E4BC6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NiesPro Success Button -->
        <Style x:Key="NiesProSuccessButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProSuccess}"/>
        </Style>

        <!-- NiesPro Warning Button -->
        <Style x:Key="NiesProWarningButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProWarning}"/>
        </Style>

        <!-- NiesPro Error Button -->
        <Style x:Key="NiesProErrorButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProError}"/>
        </Style>

        <!-- NiesPro Service Card Ultra-Modern -->
        <Style x:Key="NiesProServiceCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource NiesProSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NiesProBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" 
                                    ShadowDepth="4" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NiesPro Status Indicator Advanced -->
        <Style x:Key="NiesProStatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.2" 
                                    ShadowDepth="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NiesPro Header Typography -->
        <Style x:Key="NiesProMainTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="NiesProSubtitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>

        <!-- Data converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <!-- Main Container with Custom Window Border -->
    <Border Background="{StaticResource NiesProLight}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.25" ShadowDepth="8" BlurRadius="32"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource NiesProPrimary}" 
                    CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="24,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- NiesPro Logo & Brand -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="{StaticResource NiesProGold}" 
                                CornerRadius="6" Width="48" Height="48" 
                                Margin="0,0,16,0">
                            <TextBlock Text="N" FontFamily="Segoe UI Variable" 
                                      FontWeight="ExtraBold" FontSize="24"
                                      Foreground="{StaticResource NiesProPrimary}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="NiesPro" Style="{StaticResource NiesProMainTitle}"/>
                            <TextBlock Text="Professional Service Administration" 
                                      Style="{StaticResource NiesProSubtitle}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="🔄 Refresh" 
                               Style="{StaticResource NiesProPrimaryButton}"
                               Background="{StaticResource NiesProInfo}"
                               Command="{Binding RefreshCommand}"/>
                        <Button Content="▶ Start All" 
                               Style="{StaticResource NiesProSuccessButton}"
                               Command="{Binding StartAllCommand}"/>
                        <Button Content="⏹ Stop All" 
                               Style="{StaticResource NiesProErrorButton}"
                               Command="{Binding StopAllCommand}"/>
                        <Button Content="🔄 Restart All" 
                               Style="{StaticResource NiesProWarningButton}"
                               Command="{Binding RestartAllCommand}"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Button Content="–" Width="32" Height="32" 
                               Background="Transparent" Foreground="White"
                               BorderThickness="0" FontSize="16"
                               Click="MinimizeButton_Click"/>
                        <Button Content="×" Width="32" Height="32" 
                               Background="Transparent" Foreground="White"
                               BorderThickness="0" FontSize="16"
                               Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Dashboard Content -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" MinWidth="700"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="2*" MinWidth="500"/>
                </Grid.ColumnDefinitions>

                <!-- Services Management Panel -->
                <Border Grid.Column="0" Style="{StaticResource NiesProServiceCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Panel Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="{StaticResource NiesProAccent}" 
                                   CornerRadius="8" Width="40" Height="40" Margin="0,0,16,0">
                                <TextBlock Text="⚙" FontSize="20" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Microservices Management" 
                                          FontFamily="Segoe UI Variable" FontWeight="Bold" FontSize="20"
                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                <TextBlock Text="Monitor and control all NiesPro microservices" 
                                          FontFamily="Segoe UI Variable" FontSize="14"
                                          Foreground="{StaticResource NiesProTextSecondary}"/>
                            </StackPanel>
                            
                            <Border Grid.Column="2" Background="{StaticResource NiesProGold}" 
                                   CornerRadius="12" Padding="12,6">
                                <TextBlock Text="{Binding Services.Count, StringFormat={}{0} Services}" 
                                          FontFamily="Segoe UI Variable" FontWeight="SemiBold"
                                          Foreground="{StaticResource NiesProPrimary}"/>
                            </Border>
                        </Grid>
                        
                        <!-- Services List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Services}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource NiesProServiceCard}" 
                                               Margin="0,0,0,16" 
                                               Background="{StaticResource NiesProLight}"
                                               BorderBrush="{StaticResource NiesProBorder}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Service Header with Status -->
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Service Icon -->
                                                    <Border Grid.Column="0" Background="{StaticResource NiesProSecondary}" 
                                                           CornerRadius="6" Width="32" Height="32" 
                                                           Margin="0,0,12,0">
                                                        <TextBlock Text="🔧" FontSize="16" Foreground="White"
                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Service Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                  FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="16"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="12" 
                                                                  Foreground="{StaticResource NiesProTextSecondary}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Status Indicators -->
                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                                        <Border Background="{Binding StatusColor}" CornerRadius="7" 
                                                               Width="14" Height="14" Margin="4,0">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000000" Opacity="0.3" 
                                                                                ShadowDepth="1" BlurRadius="3"/>
                                                            </Border.Effect>
                                                        </Border>
                                                        <Border Background="{Binding HealthColor}" CornerRadius="7" 
                                                               Width="14" Height="14" Margin="4,0">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000000" Opacity="0.3" 
                                                                                ShadowDepth="1" BlurRadius="3"/>
                                                            </Border.Effect>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <!-- Port Badge -->
                                                    <Border Grid.Column="3" Background="{StaticResource NiesProAccent}" 
                                                           CornerRadius="10" Padding="8,4" Margin="8,0,0,0">
                                                        <TextBlock Text="{Binding Port}" 
                                                                  FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="11"
                                                                  Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                                
                                                <!-- Service Details Grid -->
                                                <Grid Grid.Row="1" Margin="0,12,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Port" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Port}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Status" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Status}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Health" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Health}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                                                    <Button Content="▶" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProSuccessButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.StartServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="⏹" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProErrorButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.StopServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="🔄" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProWarningButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.RestartServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="💻" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProPrimaryButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.OpenSwaggerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="❤️" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProPrimaryButton}"
                                                           Background="{StaticResource NiesProInfo}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.CheckHealthCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="PID" FontSize="10" 
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding ProcessId}" FontWeight="Bold"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Uptime" FontSize="10" 
                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding UptimeDisplay}" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Error Display -->
                                            <Border Grid.Row="3" Margin="0,8,0,0"
                                                   Background="#FFEBEE" CornerRadius="4" Padding="8"
                                                   Visibility="{Binding LastError, 
                                                   Converter={StaticResource BoolToVisConverter}}">
                                                <TextBlock Text="{Binding LastError}" 
                                                          Foreground="{StaticResource ErrorBrush}"
                                                          FontSize="11" TextWrapping="Wrap"/>
                                            </Border>
                                            
                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Row="4" Orientation="Horizontal" 
                                                       Margin="0,12,0,0">
                                                <Button Content="▶️" ToolTip="Start Service"
                                                       Style="{StaticResource ModernButton}"
                                                       Background="{StaticResource SuccessBrush}"
                                                       Command="{Binding DataContext.StartServiceCommand, 
                                                       RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="8,4" Margin="2"/>
                                                <Button Content="⏹️" ToolTip="Stop Service"
                                                       Style="{StaticResource ModernButton}"
                                                       Background="{StaticResource ErrorBrush}"
                                                       Command="{Binding DataContext.StopServiceCommand, 
                                                       RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="8,4" Margin="2"/>
                                                <Button Content="🔁" ToolTip="Restart Service"
                                                       Style="{StaticResource ModernButton}"
                                                       Background="{StaticResource WarningBrush}"
                                                       Command="{Binding DataContext.RestartServiceCommand, 
                                                       RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="8,4" Margin="2"/>
                                                <Button Content="🏥" ToolTip="Health Check"
                                                       Style="{StaticResource ModernButton}"
                                                       Background="{StaticResource AccentBrush}"
                                                       Command="{Binding DataContext.OpenHealthCommand, 
                                                       RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="8,4" Margin="2"/>
                                                <Button Content="📚" ToolTip="API Documentation"
                                                       Style="{StaticResource ModernButton}"
                                                       Background="{StaticResource PrimaryBrush}"
                                                       Command="{Binding DataContext.OpenSwaggerCommand, 
                                                       RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Padding="8,4" Margin="2"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" 
                         Background="{StaticResource TextSecondaryBrush}" 
                         Opacity="0.3" Margin="8,0"/>

            <!-- Monitoring Panel -->
            <Border Grid.Column="2" Style="{StaticResource ServiceCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📊 System Monitoring" 
                                  FontSize="20" FontWeight="Bold" 
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <ComboBox Grid.Column="1" Width="200" 
                                 ItemsSource="{Binding Services}"
                                 SelectedItem="{Binding SelectedService}"
                                 DisplayMemberPath="DisplayName"
                                 Margin="0,0,0,16"/>
                    </Grid>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- System Overview -->
                            <Border Style="{StaticResource ServiceCard}" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="🖥️ System Overview" FontSize="16" FontWeight="Bold"
                                              Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Running Services" FontSize="10" 
                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding Services.Count}" FontSize="24" 
                                                      FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Total Uptime" FontSize="10" 
                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="24h 15m" FontSize="24" 
                                                      FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Service Details -->
                            <Border Style="{StaticResource ServiceCard}" 
                                   Visibility="{Binding SelectedService, 
                                   Converter={StaticResource BoolToVisConverter}}">
                                <StackPanel DataContext="{Binding SelectedService}">
                                    <TextBlock Text="📋 Service Details" FontSize="16" FontWeight="Bold"
                                              Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DisplayName}" Margin="8,4"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Port}" Margin="8,4"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding StatusDisplay}" 
                                                  Foreground="{Binding StatusColor}" Margin="8,4"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Health:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding HealthDisplay}" 
                                                  Foreground="{Binding HealthColor}" Margin="8,4"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Uptime:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding UptimeDisplay}" Margin="8,4"/>
                                        
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Last Check:" FontWeight="Bold" Margin="0,4"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LastHealthCheckDisplay}" Margin="8,4"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundBrush}" 
               BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Busy Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="⏳" FontSize="14" Margin="0,0,8,0"/>
                </StackPanel>
                
                <!-- Status Message -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" 
                          Foreground="{StaticResource TextPrimaryBrush}"/>
                
                <!-- Version -->
                <TextBlock Grid.Column="2" Text="{Binding ApplicationVersion}" 
                          Foreground="{StaticResource TextSecondaryBrush}" 
                          Margin="0,0,16,0"/>
                
                <!-- Current Time -->
                <TextBlock Grid.Column="3" x:Name="TimeDisplay"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
            </Grid>
