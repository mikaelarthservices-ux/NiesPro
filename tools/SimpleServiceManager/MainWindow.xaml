<Window x:Class="NiesPro.ServiceAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Height="950" Width="1600"
        WindowStartupLocation="CenterScreen"
        MinWidth="1400" MinHeight="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- NiesPro Professional Color Palette -->
        <SolidColorBrush x:Key="NiesProPrimary" Color="#0B1426"/>
        <SolidColorBrush x:Key="NiesProSecondary" Color="#1B2951"/>
        <SolidColorBrush x:Key="NiesProAccent" Color="#2E4BC6"/>
        <SolidColorBrush x:Key="NiesProGold" Color="#D4AF37"/>
        <SolidColorBrush x:Key="NiesProLight" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="NiesProSurface" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NiesProBorder" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="NiesProSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="NiesProWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="NiesProError" Color="#EF4444"/>
        <SolidColorBrush x:Key="NiesProInfo" Color="#3B82F6"/>
        <SolidColorBrush x:Key="NiesProTextPrimary" Color="#1E293B"/>
        <SolidColorBrush x:Key="NiesProTextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="NiesProTextMuted" Color="#94A3B8"/>
        
        <!-- NiesPro Ultra-Modern Button Styles -->
        <Style x:Key="NiesProPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NiesProAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" 
                                                ShadowDepth="2" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3B5CE6" Offset="0"/>
                                            <GradientStop Color="#2E4BC6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NiesPro Success Button -->
        <Style x:Key="NiesProSuccessButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProSuccess}"/>
        </Style>

        <!-- NiesPro Warning Button -->
        <Style x:Key="NiesProWarningButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProWarning}"/>
        </Style>

        <!-- NiesPro Error Button -->
        <Style x:Key="NiesProErrorButton" TargetType="Button" BasedOn="{StaticResource NiesProPrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NiesProError}"/>
        </Style>

        <!-- NiesPro Service Card Ultra-Modern -->
        <Style x:Key="NiesProServiceCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource NiesProSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NiesProBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" 
                                    ShadowDepth="4" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NiesPro Header Typography -->
        <Style x:Key="NiesProMainTitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="NiesProSubtitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.85"/>
        </Style>

        <!-- Data converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <!-- Main Container with Custom Window Border -->
    <Border Background="{StaticResource NiesProLight}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.25" ShadowDepth="8" BlurRadius="32"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource NiesProPrimary}" 
                    CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="24,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- NiesPro Logo & Brand -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="{StaticResource NiesProGold}" 
                                CornerRadius="6" Width="48" Height="48" 
                                Margin="0,0,16,0">
                            <TextBlock Text="N" FontFamily="Segoe UI Variable" 
                                      FontWeight="ExtraBold" FontSize="24"
                                      Foreground="{StaticResource NiesProPrimary}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="NiesPro" Style="{StaticResource NiesProMainTitle}"/>
                            <TextBlock Text="Professional Service Administration" 
                                      Style="{StaticResource NiesProSubtitle}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="ðŸ”„ Refresh" 
                               Style="{StaticResource NiesProPrimaryButton}"
                               Background="{StaticResource NiesProInfo}"
                               Command="{Binding RefreshCommand}"/>
                        <Button Content="â–¶ Start All" 
                               Style="{StaticResource NiesProSuccessButton}"
                               Command="{Binding StartAllCommand}"/>
                        <Button Content="â¹ Stop All" 
                               Style="{StaticResource NiesProErrorButton}"
                               Command="{Binding StopAllCommand}"/>
                        <Button Content="ðŸ”„ Restart All" 
                               Style="{StaticResource NiesProWarningButton}"
                               Command="{Binding RestartAllCommand}"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Button Content="â€“" Width="32" Height="32" 
                               Background="Transparent" Foreground="White"
                               BorderThickness="0" FontSize="16"
                               Click="MinimizeButton_Click"/>
                        <Button Content="Ã—" Width="32" Height="32" 
                               Background="Transparent" Foreground="White"
                               BorderThickness="0" FontSize="16"
                               Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Dashboard Content -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" MinWidth="700"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="2*" MinWidth="500"/>
                </Grid.ColumnDefinitions>

                <!-- Services Management Panel -->
                <Border Grid.Column="0" Style="{StaticResource NiesProServiceCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Panel Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="{StaticResource NiesProAccent}" 
                                   CornerRadius="8" Width="40" Height="40" Margin="0,0,16,0">
                                <TextBlock Text="âš™" FontSize="20" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Microservices Management" 
                                          FontFamily="Segoe UI Variable" FontWeight="Bold" FontSize="20"
                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                <TextBlock Text="Monitor and control all NiesPro microservices" 
                                          FontFamily="Segoe UI Variable" FontSize="14"
                                          Foreground="{StaticResource NiesProTextSecondary}"/>
                            </StackPanel>
                            
                            <Border Grid.Column="2" Background="{StaticResource NiesProGold}" 
                                   CornerRadius="12" Padding="12,6">
                                <TextBlock Text="{Binding Services.Count, StringFormat={}{0} Services}" 
                                          FontFamily="Segoe UI Variable" FontWeight="SemiBold"
                                          Foreground="{StaticResource NiesProPrimary}"/>
                            </Border>
                        </Grid>
                        
                        <!-- Services List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Services}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource NiesProServiceCard}" 
                                               Margin="0,0,0,16" 
                                               Background="{StaticResource NiesProLight}"
                                               BorderBrush="{StaticResource NiesProBorder}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Service Header with Status -->
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Service Icon -->
                                                    <Border Grid.Column="0" Background="{StaticResource NiesProSecondary}" 
                                                           CornerRadius="6" Width="32" Height="32" 
                                                           Margin="0,0,12,0">
                                                        <TextBlock Text="ðŸ”§" FontSize="16" Foreground="White"
                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Service Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                  FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="16"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="12" 
                                                                  Foreground="{StaticResource NiesProTextSecondary}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Status Indicators -->
                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                                        <Border Background="{Binding StatusColor}" CornerRadius="7" 
                                                               Width="14" Height="14" Margin="4,0">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000000" Opacity="0.3" 
                                                                                ShadowDepth="1" BlurRadius="3"/>
                                                            </Border.Effect>
                                                        </Border>
                                                        <Border Background="{Binding HealthColor}" CornerRadius="7" 
                                                               Width="14" Height="14" Margin="4,0">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#000000" Opacity="0.3" 
                                                                                ShadowDepth="1" BlurRadius="3"/>
                                                            </Border.Effect>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <!-- Port Badge -->
                                                    <Border Grid.Column="3" Background="{StaticResource NiesProAccent}" 
                                                           CornerRadius="10" Padding="8,4" Margin="8,0,0,0">
                                                        <TextBlock Text="{Binding Port}" 
                                                                  FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="11"
                                                                  Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                                
                                                <!-- Service Details Grid -->
                                                <Grid Grid.Row="1" Margin="0,12,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Port" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Port}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Status" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Status}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Health" 
                                                                  FontFamily="Segoe UI Variable" FontSize="10" FontWeight="Medium"
                                                                  Foreground="{StaticResource NiesProTextMuted}" Margin="0,0,0,2"/>
                                                        <TextBlock Text="{Binding Health}" 
                                                                  FontFamily="Segoe UI Variable" FontSize="13" FontWeight="SemiBold"
                                                                  Foreground="{StaticResource NiesProTextPrimary}"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Right">
                                                    <Button Content="â–¶" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProSuccessButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.StartServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="â¹" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProErrorButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.StopServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="ðŸ”„" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProWarningButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.RestartServiceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="ðŸ’»" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProPrimaryButton}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.OpenSwaggerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                    <Button Content="â¤ï¸" Width="32" Height="32" Margin="4,0"
                                                           Style="{StaticResource NiesProPrimaryButton}"
                                                           Background="{StaticResource NiesProInfo}"
                                                           Padding="0" FontSize="12"
                                                           Command="{Binding DataContext.CheckHealthCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Advanced System Monitoring Panel -->
                <Border Grid.Column="2" Style="{StaticResource NiesProServiceCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Monitoring Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="{StaticResource NiesProInfo}" 
                                   CornerRadius="8" Width="40" Height="40" Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“Š" FontSize="20" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="System Monitoring" 
                                          FontFamily="Segoe UI Variable" FontWeight="Bold" FontSize="20"
                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                <TextBlock Text="Real-time system overview and alerts" 
                                          FontFamily="Segoe UI Variable" FontSize="14"
                                          Foreground="{StaticResource NiesProTextSecondary}"/>
                            </StackPanel>
                            
                            <Border Grid.Column="2" Background="{StaticResource NiesProSuccess}" 
                                   CornerRadius="12" Padding="12,6">
                                <TextBlock Text="Online" 
                                          FontFamily="Segoe UI Variable" FontWeight="SemiBold"
                                          Foreground="White"/>
                            </Border>
                        </Grid>
                        
                        <!-- System Overview Stats -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Running Services -->
                            <Border Grid.Column="0" Background="{StaticResource NiesProSuccess}" 
                                   CornerRadius="12" Padding="20,16">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Running Services" 
                                              FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                              Foreground="White" Opacity="0.9" 
                                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="4" 
                                                  FontFamily="Segoe UI Variable" FontSize="32" FontWeight="ExtraBold"
                                                  Foreground="White"/>
                                        <TextBlock Text="/ 4" 
                                                  FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Normal"
                                                  Foreground="White" Opacity="0.8" 
                                                  VerticalAlignment="Bottom" Margin="4,0,0,6"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <!-- Total Uptime -->
                            <Border Grid.Column="2" Background="{StaticResource NiesProAccent}" 
                                   CornerRadius="12" Padding="20,16">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Total Uptime" 
                                              FontFamily="Segoe UI Variable" FontSize="12" FontWeight="Medium"
                                              Foreground="White" Opacity="0.9" 
                                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="24h 15m" 
                                              FontFamily="Segoe UI Variable" FontSize="20" FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Activity Log -->
                        <Border Grid.Row="2" Background="{StaticResource NiesProLight}" 
                               CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="ðŸ“ Activity Log" 
                                          FontFamily="Segoe UI Variable" FontWeight="SemiBold" FontSize="16"
                                          Foreground="{StaticResource NiesProTextPrimary}"
                                          Margin="0,0,0,12"/>
                                
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                    <StackPanel>
                                        <!-- Live Log Entries -->
                                        <Border Background="{StaticResource NiesProSurface}" 
                                               CornerRadius="6" Padding="12,8" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Background="{StaticResource NiesProSuccess}" 
                                                       CornerRadius="4" Width="8" Height="8" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="All NiesPro services running successfully" 
                                                          FontFamily="Segoe UI Variable" FontSize="12"
                                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                                <TextBlock Grid.Column="2" Text="Just now" 
                                                          FontFamily="Segoe UI Variable" FontSize="10"
                                                          Foreground="{StaticResource NiesProTextMuted}"/>
                                            </Grid>
                                        </Border>
                                        
                                        <Border Background="{StaticResource NiesProSurface}" 
                                               CornerRadius="6" Padding="12,8" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Background="{StaticResource NiesProInfo}" 
                                                       CornerRadius="4" Width="8" Height="8" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="Professional interface loaded" 
                                                          FontFamily="Segoe UI Variable" FontSize="12"
                                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                                <TextBlock Grid.Column="2" Text="16:45:30" 
                                                          FontFamily="Segoe UI Variable" FontSize="10"
                                                          Foreground="{StaticResource NiesProTextMuted}"/>
                                            </Grid>
                                        </Border>
                                        
                                        <Border Background="{StaticResource NiesProSurface}" 
                                               CornerRadius="6" Padding="12,8" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Background="{StaticResource NiesProSuccess}" 
                                                       CornerRadius="4" Width="8" Height="8" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" Text="Health checks completed successfully" 
                                                          FontFamily="Segoe UI Variable" FontSize="12"
                                                          Foreground="{StaticResource NiesProTextPrimary}"/>
                                                <TextBlock Grid.Column="2" Text="16:42:45" 
                                                          FontFamily="Segoe UI Variable" FontSize="10"
                                                          Foreground="{StaticResource NiesProTextMuted}"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Professional Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource NiesProPrimary}" 
                   CornerRadius="0,0,12,12" Padding="24,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status Message -->
                    <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                              FontFamily="Segoe UI Variable" FontSize="14"
                              VerticalAlignment="Center" 
                              Foreground="White"/>
                    
                    <!-- Live Stats -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <Border Background="{StaticResource NiesProGold}" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="CPU: 12%" FontFamily="Segoe UI Variable" FontSize="11" FontWeight="SemiBold"
                                      Foreground="{StaticResource NiesProPrimary}"/>
                        </Border>
                        <Border Background="{StaticResource NiesProAccent}" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <TextBlock Text="RAM: 45%" FontFamily="Segoe UI Variable" FontSize="11" FontWeight="SemiBold"
                                      Foreground="White"/>
                        </Border>
                        <Border Background="{StaticResource NiesProSuccess}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="All Systems OK" FontFamily="Segoe UI Variable" FontSize="11" FontWeight="SemiBold"
                                      Foreground="White"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- NiesPro Branding -->
                    <TextBlock Grid.Column="3" Text="Â© 2025 NiesPro - Professional ERP Platform" 
                              FontFamily="Segoe UI Variable" FontSize="12"
                              VerticalAlignment="Center" 
                              Foreground="White" Opacity="0.7"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>